<%- include('./partials/header') -%>
<title>Search Recipes</title>
<%- include('./partials/nav') -%>

<div class="container mt-5" style="background-color: rgba(240, 248, 255, 0.716);">
    

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        <% for(let item of cuisineRecipes) { %>
            <div class="col" style="margin-top: 20px;">
                <a href="/dish/show/<%= item._id %>" class="card-link">
                    <div class="card" style="width: 300px;; margin-top: 0; box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset; background-color: rgb(208, 186, 186); border-radius: 20px; ">
                        <img src="<%= item.imageUrl %>" class="card-img-top" alt="Recipe Image" style="width: 100%; height: 200px; object-fit: cover; border-radius: 20px;border-bottom-right-radius: 0px">
                        <div class="card-body" style="cursor: pointer; color: black; text-decoration: none; background-color: rgb(208, 186, 186);border-top-right-radius: 20px;border-radius: 20px;">
                            <h5 class="card-title"><strong>Dish: </strong> <%= item.dish %></h5>
                            <p class="card-text"><strong><%= item.mealType %></strong></p>
                            <p class="card-text">Cuisine: <%= item.cuisine %></p>
                            <p class="card-text">Diet: <%= item.diet %></p>
                            <div style="width: 120px; height: 40px; display: flex; flex-direction: row; margin-left: 170px; margin-bottom: 10px; overflow: auto;">
                                <i style="margin-right: 10px;" class="bi bi-facebook"></i>
                                <i style="margin-right: 10px;" class="bi bi-instagram"></i>
                                <i style="margin-right: 10px;" class="bi bi-whatsapp"></i>
                                <i style="margin-right: 10px;" class="bi bi-twitter"></i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') -%>