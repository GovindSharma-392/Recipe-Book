<%- include('./partials/header') -%>
<title>Search Recipes</title>
<%- include('./partials/nav') -%>

<div class="container mt-5" style="background-color: rgba(240, 248, 255, 0.716);">
    


        <% for(let item of cuisineRecipes) { %>
            <a href="/dish/show/<%= item._id %>" class="card-link">
                <div style="display: flex; flex-direction: row; width: 100%; height: 200px; border: 2px solid black; margin: 10px;">
                    <div style="width: 30%; border: 1px solid black; padding: 3px;"><img src="<%= item.imageUrl %>" class="card-img-top" alt="Recipe Image" style="width: 100%; height: 100%; object-fit: cover; "></div>
                    <div style="display: flex; flex-direction: column;justify-content: center; padding: 10px; margin: 10px; color: black;">
                        <h5 class="card-title"><strong>Dish: </strong> <%= item.dish %></h5>
                        <p class="card-text"><strong><%= item.mealType %></strong></p>
                        <p class="card-text">Cuisine: <%= item.cuisine %></p>
                        <p class="card-text">Diet: <%= item.diet %></p>
                    </div>
                    <% if(item.diet == 'vegetarian') {%>
                    <div style="display: flex;justify-content: center;align-items: center;border-radius: 0px; border: 3px solid green; width: 30px;height: 30px; margin-top: 10px;"><div style="width: 50%;height: 50%; border-radius: 50%; border: 2px solid green; background-color: green;"></div></div>
                    <% }else{ %>
                        <div style="display: flex;justify-content: center;align-items: center;border-radius: 0px; border: 3px solid rgb(195, 19, 19); width: 30px;height: 30px; margin-top: 10px;"><div style="width: 50%;height: 50%; border-radius: 50%; border: 2px solid rgb(195, 19, 19); background-color: rgb(195, 19, 19);"></div></div>
                    <% } %>
                    <div style="width: 30px; border: 1px solid black;margin-left: auto; display: flex; flex-direction: column; color: black;">
                        <i style="margin-left: 5px;margin-top: 10px" class="bi bi-facebook"></i>
                        <i style="margin-left: 5px;margin-top: 20px" class="bi bi-instagram"></i>
                        <i style="margin-left: 5px;margin-top: 20px" class="bi bi-whatsapp"></i>
                        <i style="margin-left: 5px;margin-top: 20px" class="bi bi-twitter"></i>
                    </div>
                </div>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') -%>