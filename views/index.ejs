<script>
 let currentSlide = 0; // Index of the currently visible slide
const slideInterval = 2000; // 2 seconds for each slide

// Function to show a specific slide
function showSlideById(id) {
    const slides = document.querySelector('.carousel');
    const allSlides = document.querySelectorAll('.slide');
    
    // Hide all slides
    allSlides.forEach(slide => {
        slide.style.display = 'none';
    });

    // Show the slide with the given ID
    const slideToShow = document.getElementById(id);
    if (slideToShow) {
        slideToShow.style.display = 'block';
    } else {
        console.error(`Slide with ID ${id} not found.`);
    }
}

// Function to automatically cycle through slides
function autoCycleSlides() {
    const slideIds = ['slide1', 'slide2', 'slide3']; // List of slide IDs
    showSlideById(slideIds[currentSlide]);
    currentSlide = (currentSlide + 1) % slideIds.length;
}

// Show the first slide initially
showSlideById('slide1');

// Start automatic sliding
setInterval(autoCycleSlides, slideInterval);


</script>